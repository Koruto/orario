<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card"
    tools:context=".resource"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Online Resources on clicking below"
        android:textSize="22sp"
        android:textColor="#FDC689"
        android:gravity="center"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="20dp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="30dp"
        app:cardCornerRadius="150dp"
        android:layout_marginTop="30dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:elevation="30dp"
        android:layout_gravity="center"
        android:src="@drawable/resource">

    </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/online_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="@font/aclonica"
        android:text="@string/text_link"
        android:textSize="30sp">

    </TextView>



    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FDC689"
        android:layout_marginTop="200dp"
        android:text="-----------------------------------------------------------\n(More Resources coming Soon!!!)"
        android:textSize="20sp">

    </TextView>

</LinearLayout>