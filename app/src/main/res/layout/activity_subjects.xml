<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:background="@color/start"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/sub_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="#2C3E50"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_arrow_back_24">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/aclonica"
            android:text="Subjects"
            android:paddingLeft="-35dp"
            android:textAlignment="center"
            android:textColor="#FDC689"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Maths_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/start"
        android:clickable="true"
        android:contextClickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:src="@drawable/maths_logo">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center|end"
            android:paddingRight="30dp"
            android:text="Mathematics"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Physics_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/start"
        android:clickable="true"
        android:contextClickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:src="@drawable/physcis_l">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="    Physics"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Bxe_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/start"
        android:clickable="true"
        android:contextClickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:src="@drawable/etc_logo">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:text="BXE"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Paps_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/start"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:src="@drawable/paps_logos">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text=" PAPS"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Sme_card"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/start"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="50dp"
        app:cardElevation="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="30dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:src="@drawable/mech_logo">

            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text=" SME"
            android:textColor="@color/teal_200"
            android:textSize="40sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</LinearLayout>