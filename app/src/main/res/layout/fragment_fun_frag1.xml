<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fun_frag1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="30dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:elevation="30dp"
                    android:src="@drawable/fun" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fun_time"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginStart="-50dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#2C2C2C"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="25dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="Fun time !!!"
                        android:textColor="#FDC689"
                        android:textSize="40sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fun_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/amarante"
                        android:text="Now take a break &amp; chill !!"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/text_yt"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2C2C2C"
            android:contextClickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:elevation="30dp"
                android:src="@drawable/yt_logo">

            </ImageView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="Youtube"
                android:textColor="#F44336"
                android:textSize="40sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/jk"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#7ED957"
            android:contextClickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:elevation="30dp"
                android:src="@drawable/joker">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:text="Jokes"
                android:textColor="#FEE1DD"
                android:textSize="40sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fg"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FF914D"
            android:contextClickable="true"
            android:foreground="?selectableItemBackground"
            app:cardCornerRadius="50dp"
            app:cardElevation="20dp">


            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"

                android:elevation="30dp"
                android:src="@drawable/pac_logo">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/amarante"
                android:gravity="center"
                android:paddingStart="35dp"
                android:text="Games"
                android:textColor="#FFEB3B"
                android:textSize="40sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>